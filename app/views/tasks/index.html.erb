<p id="notice"><%= notice %></p>

<div class="nav nav-pills nav-justified">
  <h1 class="nav-item">Tasks</h1>

  <%= link_to "sort by expiration date", tasks_path(sort_expired: "true"),class:"nav-item"%>
  <%= link_to "sort by priority", tasks_path(sort_priority: "true"),class:"nav-item"%>

  <%= search_form_for @search do |f| %>
    <%= f.label :status %>
    <%= f.search_field :status_cont %>
    <%= f.label :title %>
    <%= f.search_field :title_cont %>
    <%= f.submit %>
  <% end %>
</div>

<table class="table">
  <thead>
    <tr>
      <th>NO</th>
      <th>Title</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Status</th>
      <th>Priority</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.id %></td>
        <td><%= task.title %></td>
        <td><%= task.start_date %></td>
        <td><%= task.end_date %></td>
        <td><%= task.status %></td>
        <%if task.priority.present?%>
          <%if task.priority == 1%>
            <td>high</td>
          <%elsif task.priority == 2%>
            <td>medium</td>
          <%elsif task.priority == 3%>
            <td>low</td>
          <%end%>
        <%end%>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path,class:"mb-2" %>

<%= paginate @tasks, class:"mt-5" %>
